<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Book Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Bookstore App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-tumbler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Browse Books</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>
  <!-- Cart Content -->
  <div class="container">
    <h2 class="mt-4">Your Book Cart</h2>
    <% if (cart.length === 0) { %>
      <p>Your cart is empty. Start adding some books!</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Cover</th>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
                <td><img src="/images/<%= cart[i].cover %>" width="60" class="img-thumbnail"></td>
                <td><%= cart[i].title %></td>
                <td><%= cart[i].author %></td>
                <td>$<%= cart[i].price.toFixed(2) %></td>
                <td><%= cart[i].quantity %></td>
                <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
                 <td class="text-center">
                    <form action="/remove-from-cart/<%= cart[i].bookId %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                  </td>
                  
                  <td>
                    <form action="/decrease-from-cart/<%= cart[i].bookId %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-warning btn-sm">-</button>
                    </form>
                    <span class="mx-2">
                      <%= cart[i].quantity %>
                    </span>
                  </td>
            </tr>
            <% total += cart[i].price * cart[i].quantity; %>
          <% }; %>
        </tbody>
      </table>
      <h4 class="mt-3">Grand Total: $<%= total.toFixed(2) %></h4>

      <div class="mt-4 d-flex justify-content-between">
        <a href="/shopping" class="btn btn-secondary">Continue Shopping</a>
        <a href="/checkout" class="btn btn-primary">Proceed to Checkout</a>
      </div>
    <% } %>
  </div>
</body>
</html>